<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/default_corner_radius"

    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/group_43" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/sf_bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/h1_color"
            android:textSize="@dimen/_15ssp"
            android:text="@string/join_a_community"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/join_group_ad_text"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="#686A8A"
            android:fontFamily="@font/sf_medium"/>

      <com.google.android.material.button.MaterialButton
          android:id="@+id/join_community_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/_10sdp"
          android:paddingBottom="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_25sdp"
          android:layout_marginStart="@dimen/_25sdp"
          android:text="@string/join_now"
          android:textSize="@dimen/_15ssp"
          android:textAllCaps="false"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_gravity="center"
          app:cornerRadius="@dimen/default_corner_radius"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>