<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SingleChatPersonImage">
        <item name="cornerSize">35%</item>
    </style>

    <style name="EditTextHint" parent="">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="TextViewError">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/error</item>
        <item name="fontFamily">@font/sf_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/secondaryColor</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextAppearance">@style/EditTextHint</item>
    </style>

</resources>