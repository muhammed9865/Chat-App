<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SingleChatPersonImage">
        <item name="cornerSize">35%</item>
    </style>

    <style name="EditTextHint" parent="">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="TextViewError">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/error</item>
        <item name="fontFamily">@font/sf_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="boxBackgroundMode">outline</item>

        <item name="boxStrokeColor">@color/secondaryColor</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextAppearance">@style/EditTextHint</item>
    </style>

    <style name="ToolbarTitleAppearance">
        <item name="android:fontFamily">@font/sf_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <style name="ToolbarSubtitle">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/sf_regular</item>
    </style>

    <style name="CommunitiesFilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/checkbox_button_tint</item>
        <item name="checkedIconVisible">false</item>
        <item name="fontFamily">@font/sf_semibold</item>
        <item name="chipBackgroundColor">@color/white</item>
    </style>

    <style name="CustomCommunityCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_15sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_15sdp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheet</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheet">
        <item name="background">@color/white</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
    </style>

    <style name="MaterialCardStyle">
        <item name="cardElevation">@dimen/_3sdp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
    </style>

</resources>